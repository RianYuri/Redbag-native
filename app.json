{
  "expo": {
    "name": "RedBag",
    "slug": "RedBag",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/lazy.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/lazy.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Nós precisamos usar a câmera para que você possa tirar fotos.",
        "NSPhotoLibraryUsageDescription": "Nós precisamos acessar suas fotos para que você possa selecionar uma foto."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/lazy.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "package": "com.anonymous.Lazy"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/lazy.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": " $(PRODUCT_NAME) está pedindo o acesso da sua câmera ",
          "recordAudioAndroid": false
        }
      ],
      "expo-router",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
